{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "release",
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["npm run typecheck", "npm run test:unit"],
    "after:bump": [
      "node -e \"const fs=require('fs');fs.writeFileSync('src/version.ts',\\\"export const VERSION = '${version}';\\\\n\\\")\"",
      "npm run build"
    ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}

